<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.SplashScreen_Aules" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SplashScreen_Aules" parent="Base.Theme.SplashScreen_Aules" />

    <style name="Theme.MySplashScreen" parent="Base.Theme.SplashScreen_Aules">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <!-- Customize your theme here. -->
    </style>


</resources>